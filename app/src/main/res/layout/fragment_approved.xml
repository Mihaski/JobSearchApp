<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".presentation.FragmentApproved">

    <TextView
        android:id="@+id/tv_title_for_concat_email"
        style="@style/style_sf_pro_bold_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        tools:text="@string/tv_code_over_email"
        android:textSize="20sp" />

    <TextView
        style="@style/style_sf_pro_bold_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/tv_enter_code_please"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/cardview_dark_background"
            app:cardCornerRadius="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass_code_number_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:padding="0dp"
                android:textColor="@color/grey_3"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/cardview_dark_background"
            app:cardCornerRadius="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass_code_number_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:padding="0dp"
                android:textColor="@color/grey_3"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/cardview_dark_background"
            app:cardCornerRadius="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass_code_number_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:padding="0dp"
                android:textColor="@color/grey_3"
                android:textSize="24sp"
                tools:text="1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/cardview_dark_background"
            app:cardCornerRadius="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass_code_number_4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:padding="0dp"
                android:textColor="@color/grey_3"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/button_apply"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/dark_blue"
        android:text="@string/button_confirm"
        android:textColor="@color/inactive_text_color"
        app:cornerRadius="8dp" />

</LinearLayout>