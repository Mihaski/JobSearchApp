<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:backgroundTint="@color/cardview_dark_background"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_first_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toStartOf="@+id/butt_favorites_heart_blue_or_inactive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/count_currently_viewing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/green"
                android:textSize="14sp"
                tools:text="@string/tv_verticals_card" />

            <TextView
                android:id="@+id/job_title"
                style="@style/style_sf_pro_bold_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                tools:text="@string/tv_verticals_card" />

            <TextView
                android:id="@+id/salary"
                style="@style/style_sf_pro_bold_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                tools:text="@string/tv_verticals_card" />

            <TextView
                android:id="@+id/city"
                style="@style/style_sf_pro_bold_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                tools:text="@string/tv_verticals_card" />

                <TextView
                    android:id="@+id/company_name"
                    android:drawablePadding="5dp"
                    style="@style/style_sf_pro_bold_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/icon_ok"
                    tools:text="@string/tv_verticals_card" />

            <TextView
                android:id="@+id/experience"
                style="@style/style_sf_pro_bold_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/bag_mzf"
                tools:text="@string/tv_verticals_card" />

            <TextView
                android:id="@+id/date_of_publication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/grey_3"
                android:textSize="14sp"
                tools:text="@string/tv_verticals_card" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/butt_favorites_heart_blue_or_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button_favorites"
            android:src="@drawable/ic_favorites"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ll_first_item"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/butt_calls_to_vacancies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/button_calls"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/ll_first_item" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@+id/butt_calls_to_vacancies" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>